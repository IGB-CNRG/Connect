{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Entry Form{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active" aria-current="page">
        IGB Entry Request Form
    </li>
{% endblock %}

{% block content %}
    {% form_theme form _self %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-lg">{{ form_row(form.firstName) }}</div>
        <div class="col-lg">{{ form_row(form.lastName) }}</div>
    </div>
    <div class="row" data-controller="username-check netid-autofill" data-username-check-url-value="{{ path('api_person_username') }}">
        <div class="col-lg">{{ form_row(form.netid, {'attr':{'data-action':'netid-autofill#updateFields change->username-check#checkIfUsernameUnique', 'data-username-check-target':'username'}}) }}</div>
        <div class="col-lg">{{ form_row(form.uin) }}</div>
        <div class="col-lg">{{ form_row(form.email, {'attr':{'data-netid-autofill-target':'email'}}) }}</div>
    </div>
    <div class="row">
        <div class="col-lg">{{ form_row(form.roomAffiliations) }}</div>
        <div class="col-lg">{{ form_row(form.officePhone) }}</div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

{% block collection_row %}
    {{ block("form_widget") }}
{% endblock %}

{% block collection_entry_row %}
    {{ block("form_widget") }}
{% endblock %}

{% block unit_affiliation_row %}
    <div data-controller="other-entry">
        {{ form_row(form.unit) }}
        {{ form_row(form.otherUnit) }}
    </div>
{% endblock %}

{% block theme_affiliation_row %}
    <div class="row">
        <div class="col-lg">{{ form_row(form.theme) }}</div>
        <div class="col-lg">{{ form_row(form.memberCategory) }}</div>
    </div>
    <div class="row">
        <div class="col-lg">{{ form_row(form.startedAt) }}</div>
        <div class="col-lg">{{ form_row(form.endedAt) }}</div>
    </div>
{% endblock %}

{% block captcha_widget %}
    <div>
        <img src="{{ captcha_code }}" title="captcha" width="{{ captcha_width }}" height="{{ captcha_height }}" style="margin-bottom: 0.5rem;"/>
        {{ form_widget(form) }}
    </div>
{% endblock %}